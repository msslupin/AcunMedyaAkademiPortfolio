﻿@model List<AcunMedyaAkademiPortfolio.Models.TblProject>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Projelerim</h2>


    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Proje İsmi</th>
            <th>Proje Resmi</th>
            <th>Kategori</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProjectId</td>
                <td>@item.ProjectName</td>
                <td>@item.ProjectImageUrl</td>
                <td>@item.ProjectCategory</td>
                <td><a href="/Project/UpdateProject/@item.ProjectId" class="btn btn-warning">Güncelle</a></td>
                <td><a href="/Project/DeleteProject/@item.ProjectId" class="btn btn-danger">Sil</a></td>
            </tr>


        }
        </table>


    <a href="/Project/CreateProject" class="btn btn-success">Yeni Proje Ekle</a>
